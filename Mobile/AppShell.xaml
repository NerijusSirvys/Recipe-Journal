<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Mobile.Views"
    Title="Mobile">

    <ShellContent
        Title="Home"
        FlyoutIcon="ic_home_page.svg"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />

    <ShellContent
        FlyoutIcon="ic_create_recipe_page.svg"
        Title="Create"
        ContentTemplate="{DataTemplate pages:CreateRecipePage}"
        Route="CreateRecipePage" />

    <ShellContent
        FlyoutIcon="ic_download_page.svg"
        Title="Download"
        ContentTemplate="{DataTemplate pages:DownloadPage}"
        Route="DownloadPage" />
</Shell>
